{
  "name": "vef2-2026-v2",
  "type": "module",
  "scripts": {
    "dev": "tsx watch --env-file=.env src/index.ts",
    "build": "tsc",
    "start:local": "node dist/index.js",
    "start": "node dist/index.js",
    "lint": "eslint",
    "test": "node --import tsx --test --experimental-test-module-mocks 'src/**/*.test.ts'",
    "test:watch": "node --import tsx --test --watch --experimental-test-module-mocks \"src/**/*.test.ts\"",
    "test:coverage": "node --import tsx --test --experimental-test-coverage --experimental-test-module-mocks 'src/**/*.test.ts'"
  },
  "dependencies": {
    "@hono/node-server": "^1.19.9",
    "hono": "^4.11.4",
    "pg": "^8.17.2",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@types/node": "^20.11.17",
    "@types/pg": "^8.16.0",
    "tsx": "^4.7.1",
    "typescript": "^5.8.3"
  }
}
